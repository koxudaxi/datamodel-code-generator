{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/$defs/UserWrapper"
    },
    "admin": {
      "$ref": "#/$defs/AdminWrapper"
    },
    "settings": {
      "$ref": "#/$defs/SettingsWrapper"
    }
  },
  "$defs": {
    "UserWrapper": {
      "$ref": "#/$defs/Person"
    },
    "AdminWrapper": {
      "$ref": "#/$defs/Admin"
    },
    "SettingsWrapper": {
      "$ref": "#/$defs/Config"
    },
    "Person": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string"}
      },
      "required": ["name"]
    },
    "Admin": {
      "allOf": [
        {"$ref": "#/$defs/Person"},
        {
          "type": "object",
          "properties": {
            "role": {"type": "string"}
          },
          "required": ["role"]
        }
      ]
    },
    "Config": {
      "type": "object",
      "properties": {
        "theme": {"type": "string"},
        "language": {"type": "string"}
      }
    }
  }
}
