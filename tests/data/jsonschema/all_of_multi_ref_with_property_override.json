{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/person.schema.json",
  "title": "Person",
  "$defs": {
    "Thing": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "name": { "type": "string", "minLength": 1 }
      },
      "required": ["type", "name"]
    },
    "Location": {
      "type": "object",
      "properties": {
        "address": { "type": "string", "minLength": 5 }
      },
      "required": ["address"]
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "#/$defs/Thing" },
    { "$ref": "#/$defs/Location" }
  ],
  "properties": {
    "type": { "default": "playground:Person" },
    "name": { "minLength": 2 },
    "age": { "type": "integer" }
  }
}
