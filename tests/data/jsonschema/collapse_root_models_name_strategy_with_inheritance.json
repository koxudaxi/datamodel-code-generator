{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "wrapper": {
      "$ref": "#/$defs/Wrapper"
    },
    "derived": {
      "$ref": "#/$defs/Derived"
    }
  },
  "$defs": {
    "Wrapper": {
      "$ref": "#/$defs/Inner"
    },
    "Inner": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        }
      },
      "required": ["value"]
    },
    "Derived": {
      "allOf": [
        {"$ref": "#/$defs/Inner"},
        {
          "type": "object",
          "properties": {
            "extra": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
