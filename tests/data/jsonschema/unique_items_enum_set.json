{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Container",
    "type": "object",
    "definitions": {
        "Status": {
            "type": "string",
            "enum": ["active", "inactive", "pending"]
        },
        "Item": {
            "type": "object",
            "properties": {
                "name": {"type": "string"}
            }
        }
    },
    "properties": {
        "statuses": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "#/definitions/Status"}
        },
        "items": {
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "#/definitions/Item"}
        }
    }
}
