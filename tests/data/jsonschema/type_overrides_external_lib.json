{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Feature": {
            "type": "object",
            "properties": {
                "type": {"type": "string"},
                "geometry": {"type": "object"}
            }
        },
        "FeatureCollection": {
            "type": "object",
            "properties": {
                "type": {"type": "string"},
                "features": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/Feature"}
                }
            }
        },
        "Place": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "location": {"$ref": "#/definitions/Feature"},
                "boundary": {"$ref": "#/definitions/FeatureCollection"}
            }
        }
    }
}
